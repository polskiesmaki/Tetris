<AnchorPane prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
            <children>
               <SplitPane dividerPositions="0.1738" orientation="VERTICAL" prefHeight="700.0" prefWidth="500.0">
                 <items>
                   <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="97.0" prefWidth="490.0">
                        <children>
                           <HBox alignment="CENTER" prefHeight="117.0" prefWidth="490.0">
                              <children>
                                 <ImageView fitHeight="29.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/z.png" />
                           </image>
                                 </ImageView>
                                 <Label contentDisplay="CENTER" prefHeight="42.0" prefWidth="106.0" text="Let's Play: Tetris">
                                    <padding>
                                       <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </padding>
                                 </Label>
                              </children>
                           </HBox>
                        </children>
                     </AnchorPane>
                   <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                        <children>
                           <VBox prefHeight="567.0" prefWidth="490.0">
                              <children>
                        <Label fx:id="gameOverLabel" alignment="CENTER" prefHeight="34.0" prefWidth="490.0" text="Game Over" textFill="#f70303" visible="false">
                           <font>
                              <Font name="System Bold" size="35.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Label>
                                 <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="31.0" prefWidth="490.0" text="Du bist angemeldet als: " visible="false" />
                                 <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                       <Button fx:id="startGame" disable="true" mnemonicParsing="false" text="Spiel starten">
                                          <HBox.margin>
                                             <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                          </HBox.margin>
                                       </Button>
                                       <Button fx:id="showHistory" disable="true" mnemonicParsing="false" text="Historie anzeigen">
                                          <HBox.margin>
                                             <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                          </HBox.margin>
                                       </Button>
                                       <Button fx:id="showRulesOfGame" disable="true" mnemonicParsing="false" text="Spielregeln ansehen">
                                          <HBox.margin>
                                             <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                          </HBox.margin>
                                       </Button>
                                    </children>
                                    <padding>
                                       <Insets top="5.0" />
                                    </padding>
                                    <VBox.margin>
                                       <Insets />
                                    </VBox.margin>
                                 </HBox>
                                 <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                       <Button fx:id="identifyGamerBtn" mnemonicParsing="false" text="Anmelden">
                                          <HBox.margin>
                                             <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                          </HBox.margin>
                                       </Button>
                                       <Button fx:id="logoutBtn" disable="true" mnemonicParsing="false" text="Abmelden">
                                          <HBox.margin>
                                             <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                          </HBox.margin>
                                       </Button>
                                    </children>
                                 </HBox>
                              </children>
                           </VBox>
                        </children>
                     </AnchorPane>
                 </items>
